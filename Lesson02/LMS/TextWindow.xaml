<Window x:Class="LMS.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS"
        mc:Ignorable="d"
        Title="TextWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Text 1" FontSize="20" FontWeight="ExtraLight" FontStyle="Oblique"/>
        <Label Content="Text 2" FontSize="25" FontWeight="Bold" FontStyle="Italic"/>
    </StackPanel>
</Window>
