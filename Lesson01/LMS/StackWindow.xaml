<Window x:Class="LMS.StackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="StackWindow" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <Button Content="B1" Width="50" HorizontalAlignment="Left" />
            <Button Content="B2" Width="250" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="B1" Width="50"/>
                <Button Content="B1" Width="50"/>
            </StackPanel>
        </Grid>
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="B1" Width="50" />
                <Button Content="B2" Width="50" />
                <Button Content="B3" Width="50" />
                <Button Content="B4" Width="50" />
                <Button Content="B5" Width="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="50" Content="B6"/>
                <Button Width="50" Content="B7"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
